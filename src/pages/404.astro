---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from "../images/error-404.png";
---

<MainLayout title="404 - Página no encontrada">
  <div class="flex flex-col items-center justify-center gap-7">
    <Image src={error} alt="404" height={250} width={250} class="mt-10" />
    <h1 class="text-5xl font-bold mt-4">404 - Página no encontrada</h1>
    <p class="text-2xl mb-10">Lo sentimos, la página que buscas no existe.</p>
    <a
      href="/"
      class="inline-block bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white"
      >Volver al inicio</a
    >
  </div></MainLayout
>
